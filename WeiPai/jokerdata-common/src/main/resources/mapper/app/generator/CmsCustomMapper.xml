<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jokerdata.mapper.app.generator.CmsCustomMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jokerdata.entity.app.generator.Cms">
        <id column="cms_id" property="cms_id"/>
        <result column="cms_title" property="cms_title"/>
        <result column="cms_author" property="cms_author"/>
        <result column="cate_id" property="cate_id"/>
        <result column="cate_name" property="cate_name"/>
        <result column="cms_image" property="cms_image"/>
        <result column="cms_content" property="cms_content"/>
        <result column="cms_sort" property="cms_sort"/>
        <result column="add_time" property="add_time"/>
        <result column="see_num" property="see_num"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        cms_id, cms_title, cms_author, cate_id, cate_name, cms_image, cms_content, cms_sort, add_time, see_num
    </sql>

    <select id="selectPage" resultMap="BaseResultMap">

        select
        <include refid="Base_Column_List"/>
        from g_cms
        where del = 0
        <if test=" param.search1 != ''">
            and g_cms.name LIKE CONCAT('%',#{param.search1},'%')
        </if>

    </select>
</mapper>
