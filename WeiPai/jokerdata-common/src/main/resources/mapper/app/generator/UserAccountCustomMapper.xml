<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jokerdata.mapper.app.generator.UserAccountCustomMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jokerdata.entity.app.generator.UserAccount">
        <id column="account_id" property="account_id"/>
        <result column="user_id" property="user_id"/>
        <result column="account_name" property="account_name"/>
        <result column="account_avatar" property="account_avatar"/>
        <result column="uid" property="uid"/>
        <result column="access_token" property="access_token"/>
        <result column="avatar_hd" property="avatar_hd"/>
        <result column="account_state" property="account_state"/>
        <result column="add_time" property="add_time"/>
        <result column="account_limit" property="account_limit"/>
        <result column="disable_reason" property="disable_reason"/>
        <result column="nopass_reason" property="nopass_reason"/>
        <result column="acc_type" property="acc_type"/>
        <result column="follow_num" property="follow_num"/>
        <result column="num_screen" property="num_screen"/>
        <result column="wechat_pic" property="wechat_pic"/>
        <result column="v_legalize" property="v_legalize"/>
        <result column="gzh_tag_id" property="gzh_tag_id"/>
        <result column="remarks" property="remarks"/>
        <result column="location" property="location"/>
        <result column="gender" property="gender"/>
        <result column="friends_count" property="friends_count"/>
        <result column="statuses_count" property="statuses_count"/>
        <result column="created_at" property="created_at"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        account_id, user_id, account_name, account_avatar, uid, access_token, avatar_hd, account_state, add_time, account_limit, disable_reason, nopass_reason, acc_type, follow_num, num_screen, wechat_pic, v_legalize, gzh_tag_id, remarks, location, gender, friends_count, statuses_count, created_at
    </sql>

    <select id="selectPage" resultMap="BaseResultMap">

        select
        <include refid="Base_Column_List"/>
        from g_user_account
        where del = 0
        <if test=" param.search1 != ''">
            and g_user_account.name LIKE CONCAT('%',#{param.search1},'%')
        </if>

    </select>
</mapper>
