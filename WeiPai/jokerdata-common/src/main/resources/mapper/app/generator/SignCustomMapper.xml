<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.jokerdata.mapper.app.generator.SignCustomMapper">

    <!-- 通用查询映射结果 -->
    <resultMap id="BaseResultMap" type="com.jokerdata.entity.app.generator.Sign">
        <id column="sign_id" property="sign_id"/>
        <result column="user_id" property="user_id"/>
        <result column="sign_coin" property="sign_coin"/>
        <result column="sign_date" property="sign_date"/>
        <result column="sign_state" property="sign_state"/>
        <result column="add_time" property="add_time"/>
    </resultMap>

    <!-- 通用查询结果列 -->
    <sql id="Base_Column_List">
        sign_id, user_id, sign_coin, sign_date, sign_state, add_time
    </sql>

    <select id="selectPage" resultMap="BaseResultMap">

        select
        <include refid="Base_Column_List"/>
        from g_sign
        where del = 0
        <if test=" param.search1 != ''">
            and g_sign.name LIKE CONCAT('%',#{param.search1},'%')
        </if>

    </select>
</mapper>
